{
    "compilerOptions": {
        "baseUrl": "src",
        "jsxImportSource": "@emotion/react",

        "paths": {
              "~assets/*": ["assets/*"],
            "~components/*": ["components/*"],
            "~context/*": ["context/*"],
            "~firebase/*": ["firebase/*"],
            "~hooks/*": ["hooks/*"],
            "~styles/*": ["styles/*"],
            "~utils/*": ["utils/*"]
        },

        "removeComments": true,
        "target": "es6",
        "sourceMap": true,

        "strict": true,

        "noEmitOnError": true,
        "skipLibCheck": true,

        "jsx": "react",
        "module": "commonjs",
        "outDir": "./dist",

        "esModuleInterop": true,

        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        "noEmit": true
    }
}
